export cast Spell greet(name) -> Silk {
    return "Hello, " + utils.capitalize(name) + "! ðŸ‘‹"
}

export cast Spell repeat_greet(name, times) -> Silk {
    let greeting = greet(name)
    return utils.repeat(greeting + " ", times)
}

export cast Spell add(a, b) -> Ember {
    return a + b
}

export cast Spell multiply(a, b) -> Ember {
    return a * b
}

export cast Spell clamped_add(a, b, min, max) -> Ember {
    return utils.clamp(a + b, min, max)
}

